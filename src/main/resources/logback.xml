<configuration>
    <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSZ} [%thread] %-5level %logger{32} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger level="DEBUG" name="org.jooq"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>

